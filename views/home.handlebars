<div class="homeFeeds">
    <div class="homeSingleFeed">
        <h2>Most Recent Posts</h2>
        {{#each mostRecentPosts}}
            <div class="post search-post">
            <a href="/posts/{{_id}}" class="postLink no-dec">
            <h2>{{this.title}}</h2>
            <div class="post-images">
                <img src="{{this.images.[0]}}" alt="{{this.title}} thumbnail" class="thumbnail">
            </div>
            <p>{{this.description}}</p>
            <p><em>{{this.formattedTimePosted}}<br><strong>{{this.poster.displayName}}</strong></em></p>
            </a>
            </div>
        {{/each}}
    </div>
    <div class="homeSingleFeed">
        <h2>Top Liked Posts</h2>
        {{#each topLikedPosts}}
            <div class="post search-post">
            <a href="/posts/{{_id}}" class="postLink no-dec">
            <h2>{{this.title}}</h2>
            <div class="post-images">
                <img src="{{this.images.[0]}}" alt="{{this.title}} thumbnail" class="thumbnail">
            </div>
            <p>{{this.description}}</p>
            <p><em>{{this.formattedTimePosted}}<br><strong>{{this.poster.displayName}}</strong></em></p>
            </a>
            </div>
        {{/each}}
    </div>
</div>